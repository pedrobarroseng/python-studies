class Carro:
    # __init__ Ã© o CONSTRUTOR. Ã‰ a funÃ§Ã£o que roda assim que o carro nasce.
    # self significa "EU MESMO". Ã‰ como o carro sabe que a cor Ã© DELE.
    def __init__(self, marca, modelo, cor):
        self.marca = marca    # A marca DESTE carro recebe a marca informada
        self.modelo = modelo
        self.cor = cor
        self.ligado = False   # Todo carro nasce desligado

    def ligar(self):
        self.ligado = True
        print(f'O {self.modelo} ligou! Vrummm ðŸš—')

# --- USANDO O MOLDE ---

# Criando o Objeto 1 (Instanciando)
meu_carro = Carro("Fiat", "Uno", "Prata")

# Criando o Objeto 2
carro_da_mae = Carro("Honda", "Civic", "Preto")

# Acessando dados
print(f"Meu carro Ã© um {meu_carro.modelo} e a cor Ã© {meu_carro.cor}")

# Usando uma aÃ§Ã£o (MÃ©todo)
meu_carro.ligar()